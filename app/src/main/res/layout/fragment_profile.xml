<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.boostcamp.dreampicker.presentation.profile.ProfileViewModel" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/collapsing_user_profile">

        <include
            android:id="@+id/layout_toolbar"
            layout="@layout/layout_toolbar_profile"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:userName="@{vm.user.name}"/>

        <ImageView
            android:id="@+id/iv_user_image"
            android:layout_width="@dimen/profile_image_size_large"
            android:layout_height="@dimen/profile_image_size_large"
            android:layout_margin="@dimen/space_median"
            app:circleImage="@{vm.user.profileImageUrl}"
            app:layout_constraintTop_toBottomOf="@id/layout_toolbar"
            app:layout_constraintBottom_toTopOf="@id/btn_follow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/btn_follow"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@{vm.user.name}"
            android:gravity="center"
            android:textSize="@dimen/text_s_large"
            app:layout_constraintTop_toBottomOf="@id/iv_user_image"
            app:layout_constraintBottom_toTopOf="@id/guideline_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_begin="220dp"
            app:layout_constraintStart_toStartOf="parent" />

        <include
            android:id="@+id/layout_feed"
            layout="@layout/layout_profile_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_goneMarginStart="@dimen/space_small"
            app:layout_goneMarginEnd="@dimen/space_small"
            app:layout_constraintBottom_toTopOf="@id/guideline_count_bottom"
            app:layout_constraintEnd_toStartOf="@id/layout_following"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_count"
            bind:count="@{String.valueOf(vm.user.feedCount)}"
            bind:title="@{String.valueOf(@string/profile_feed_count)}" />

        <include
            android:id="@+id/layout_following"
            layout="@layout/layout_profile_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_goneMarginStart="@dimen/space_small"
            app:layout_goneMarginEnd="@dimen/space_small"
            app:layout_constraintBottom_toTopOf="@id/guideline_count_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/layout_feed"
            app:layout_constraintTop_toBottomOf="@id/guideline_count"
            bind:count="@{String.valueOf(vm.user.feedCount)}"
            bind:title="@{String.valueOf(@string/profile_following_count)}" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_count_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_begin="260dp"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_profile_feed"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_count_bottom"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:items="@{vm.myFeedList}"/>

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>