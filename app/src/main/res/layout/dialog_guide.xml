<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="250dp">

    <Button
        android:id="@+id/btn_close"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="@dimen/space_xx_small"
        android:background="@android:drawable/ic_delete"
        android:backgroundTint="@color/colorWhite"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/dialog_tip_message"
        android:background="#99BDBDBD"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.boostcamp.dreampicker.utils.custom.ShineSelectionGroup
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:selector="@drawable/ic_vote_bg"
        app:leftBgColor="@android:color/holo_red_light"
        app:rightBgColor="@android:color/holo_blue_light"
        app:leftTint="@color/colorWhite"
        app:leftImage="@drawable/img_chicken"
        app:rightImage="@drawable/img_pizza"
        app:rightTint="@color/colorWhite"
        app:selectorTag="Hello World"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

