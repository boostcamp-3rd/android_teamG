<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/collapsed"
        app:constraintSetStart="@id/expanded">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/swipe_refresh"
            app:touchAnchorSide="top"
            app:moveWhenScrollAtTop="true"/>

    </Transition>

    <ConstraintSet
        android:id="@+id/collapsed">

        <Constraint
            android:id="@id/iv_user_image"
            android:layout_width="@dimen/profile_image_size_median"
            android:layout_height="@dimen/profile_image_size_median"
            android:layout_marginTop="@dimen/space_median"
            android:layout_marginBottom="@dimen/space_median"
            android:layout_marginStart="@dimen/space_median"
            android:scaleX="0.95"
            android:scaleY="0.95"
            app:layout_constraintBottom_toTopOf="@id/swipe_refresh"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Constraint
            android:id="@id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:layout_marginStart="@dimen/space_median"
            android:layout_marginEnd="@dimen/space_median"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_user_image"
            app:layout_constraintBottom_toTopOf="@id/swipe_refresh"/>

        <Constraint
            android:id="@id/layout_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.95"
            android:scaleY="0.95"
            android:layout_marginStart="@dimen/space_median"
            android:layout_marginEnd="@dimen/space_median"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/swipe_refresh"
            app:layout_constraintEnd_toStartOf="@id/layout_following"/>

        <Constraint
            android:id="@id/layout_following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.95"
            android:scaleY="0.95"
            android:layout_marginStart="@dimen/space_median"
            android:layout_marginEnd="@dimen/space_median"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/swipe_refresh"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@+id/swipe_refresh"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/iv_user_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/expanded">

        <Constraint
            android:id="@id/iv_user_image"
            android:layout_width="@dimen/profile_image_size_large"
            android:layout_height="@dimen/profile_image_size_large"
            android:layout_marginTop="@dimen/space_median"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Constraint
            android:id="@id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_median"
            android:layout_marginBottom="@dimen/space_median"
            app:layout_constraintTop_toBottomOf="@id/iv_user_image"
            app:layout_constraintBottom_toTopOf="@id/gl_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Constraint
            android:id="@+id/gl_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintGuide_begin="140dp"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@id/layout_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_small"
            android:layout_marginEnd="@dimen/space_small"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toBottomOf="@id/gl_count"
            app:layout_constraintBottom_toTopOf="@id/gl_count_bottom"
            app:layout_constraintEnd_toStartOf="@id/layout_following"
            app:layout_constraintStart_toStartOf="parent"/>

        <Constraint
            android:id="@id/layout_following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_small"
            android:layout_marginEnd="@dimen/space_small"
            app:layout_constraintTop_toBottomOf="@id/gl_count"
            app:layout_constraintBottom_toTopOf="@id/gl_count_bottom"
            app:layout_constraintStart_toEndOf="@id/layout_feed"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@id/gl_count_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="220dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
            android:id="@+id/swipe_refresh"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gl_count_bottom"/>

    </ConstraintSet>
</MotionScene>
