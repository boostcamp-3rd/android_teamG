<resources>

    <!-- 메인 테마 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhiteBackground</item>
    </style>

    <!-- 이미지 뷰 기본 스타일 -->
    <style name="ImageView" parent="Widget.AppCompat.ImageButton">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@null</item>
    </style>

    <!-- 이미지 버튼 기본 스타일 -->
    <style name="ImageButton" parent="ImageView">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ImageButton.Small" parent="ImageButton">
        <item name="android:layout_width">@dimen/button_small</item>
        <item name="android:layout_height">@dimen/button_small</item>
    </style>

    <style name="ImageButton.Median" parent="ImageButton">
        <item name="android:layout_width">@dimen/button_median</item>
        <item name="android:layout_height">@dimen/button_median</item>
    </style>

    <style name="ImageButton.Large" parent="ImageButton">
        <item name="android:layout_width">@dimen/button_large</item>
        <item name="android:layout_height">@dimen/button_large</item>
    </style>

    <!-- EditText 기본 스타일 -->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:paddingStart">@dimen/space_median</item>
        <item name="android:paddingEnd">@dimen/space_median</item>
    </style>

    <style name="EditText.Search" parent="EditText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_s_large</item>
    </style>

    <!-- TabLayout 스타일 -->
    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/profile_tab_height</item>
        <item name="android:background">@drawable/line_top</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

</resources>
