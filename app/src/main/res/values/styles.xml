<resources>

    <!-- 메인 테마 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhiteBackground</item>
    </style>

    <style name="Theme.AppCompat.Transparent" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 이미지 뷰 기본 스타일 -->
    <style name="ImageView" parent="Widget.AppCompat.ImageButton">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@null</item>
    </style>

    <!-- 이미지 버튼 기본 스타일 -->
    <style name="ImageButton" parent="ImageView">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ImageButton.Small" parent="ImageButton">
        <item name="android:layout_width">@dimen/button_small</item>
        <item name="android:layout_height">@dimen/button_small</item>
    </style>

    <style name="ImageButton.Median" parent="ImageButton">
        <item name="android:layout_width">@dimen/button_median</item>
        <item name="android:layout_height">@dimen/button_median</item>
    </style>

    <style name="ImageButton.Large" parent="ImageButton">
        <item name="android:layout_width">@dimen/button_large</item>
        <item name="android:layout_height">@dimen/button_large</item>
    </style>

    <!-- EditText 기본 스타일 -->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:paddingStart">@dimen/space_median</item>
        <item name="android:paddingEnd">@dimen/space_median</item>
    </style>

    <!-- TabLayout 스타일 -->
    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/profile_tab_height</item>
        <item name="android:background">@drawable/line_vertical</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <!-- RoundCorner Progressbar 스타일 -->
    <style name="RoundCornerProgressbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/vote_progress_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- dotted Border 스타일 -->
    <style name="DotBorder">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@drawable/dotted</item>
        <item name="android:layerType">software</item>
    </style>

    <!-- 업로드 이미지 스타일 -->
    <style name="ImageView.UploadImage">
        <item name="android:layout_width">@dimen/upload_image_size</item>
        <item name="android:layout_height">@dimen/upload_image_size</item>
        <item name="android:layout_margin">@dimen/space_x_small</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- 업로드 스크롤 태그 뷰 스타일 -->
    <style name="UploadTagScrollView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/space_x_small</item>
        <item name="android:nestedScrollingEnabled">true</item>
    </style>
</resources>
